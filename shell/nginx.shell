}

# ç”³è¯· HTTPS è¯ä¹¦ï¼ˆé‡æ„ï¼šæ­£ç¡®çš„é…ç½®ç»“æ„ï¼‰
function apply_https() {
    local domain="$1"
    
    if [ -z "$domain" ]; then
        domain=$(select_site) || return 1
    fi
    
    # ä½¿ç”¨çŠ¶æ€æ¨¡å‹å‡½æ•°æ£€æŸ¥
    if ! site_is_enabled "$domain"; then
        echo "${YELLOW}âš ï¸ ç½‘ç«™ $domain æœªå¯ç”¨ï¼Œè¯·å…ˆå¯ç”¨${RESET}"
        return 1
    fi

    if site_has_ssl "$domain"; then
        echo "${YELLOW}âš ï¸ è¯¥åŸŸåå·²æœ‰ SSL è¯ä¹¦${RESET}"
        return 1
    fi

    local conf_file="$NGINX_CONF_DIR/$domain"
    local root_dir="$WEB_ROOT_BASE/$domain"
    
    # ä»ç°æœ‰é…ç½®ä¸­è¯»å– root ç›®å½•
    if [ -f "$conf_file" ]; then
        local actual_root=$(grep -E "^\s*root\s+" "$conf_file" | head -1 | awk '{print $2}' | tr -d ';' | tr -d '"')
        if [ -n "$actual_root" ]; then
            root_dir="$actual_root"
        fi
    fi

    # ç”³è¯·è¯ä¹¦
    local retries=0
    local max_retries=3

    echo "${BLUE}ğŸš€ å¼€å§‹ä¸º $domain ç”³è¯· SSL è¯ä¹¦...${RESET}"

    while [ $retries -lt $max_retries ]; do
        if ~/.acme.sh/acme.sh --issue -d "$domain" --webroot "$root_dir" 2>/dev/null; then
            break
        fi
        retries=$((retries+1))
        echo "${YELLOW}âš ï¸ è¯ä¹¦ç”³è¯·å¤±è´¥ (å°è¯• $retries/$max_retries)ï¼Œç­‰å¾… 10 ç§’...${RESET}"
        sleep 10
    done

    if [ $retries -eq $max_retries ]; then
        echo "${RED}âŒ è¯ä¹¦ç”³è¯·å¤±è´¥ï¼Œè¯·æ£€æŸ¥:${RESET}"
        echo "1. åŸŸåæ˜¯å¦è§£æåˆ°æœ¬æœº"
        echo "2. 80 ç«¯å£æ˜¯å¦å¼€æ”¾"
        echo "3. é˜²ç«å¢™æ˜¯å¦å…è®¸ HTTP æµé‡"
        return 1
    fi

    # å®‰è£…è¯ä¹¦
    run_sudo mkdir -p "$SSL_DIR/$domain" || return 1
    ~/.acme.sh/acme.sh --install-cert -d "$domain" \
        --key-file "$SSL_DIR/$domain/key.pem" \
        --fullchain-file "$SSL_DIR/$domain/fullchain.pem" \
        --reloadcmd "sudo systemctl reload nginx" || return 1

    # å¤‡ä»½åŸé…ç½®
    backup_config "$conf_file" || return 1
    
    # è¯»å–ç°æœ‰é…ç½®å†…å®¹ï¼ˆæ’é™¤å·²æœ‰çš„ server å—ï¼‰
    local existing_config=$(run_sudo cat "$conf_file" 2>/dev/null | grep -v "^server {" | grep -v "^}" | grep -v "^# " || true)
    
    # é‡æ„é…ç½®ï¼šæ­£ç¡®çš„ HTTPS ç»“æ„
    # 1. HTTP server (80ç«¯å£) - è·³è½¬åˆ° HTTPS
    # 2. HTTPS server (443ç«¯å£) - å®é™…æœåŠ¡
    run_sudo tee "$conf_file" >/dev/null <<EOF
# HTTP server - è·³è½¬åˆ° HTTPS
server {
    listen 80;
    server_name $domain;
    
    # å…è®¸ Let's Encrypt éªŒè¯
    location /.well-known/acme-challenge/ {
        root $root_dir;
    }
    
    # å…¶ä»–è¯·æ±‚è·³è½¬åˆ° HTTPS
    location / {
        return 301 https://\$server_name\$request_uri;
    }
}

# HTTPS server - å®é™…æœåŠ¡
server {
    listen 443 ssl http2;
    server_name $domain;

    ssl_certificate     $SSL_DIR/$domain/fullchain.pem;
    ssl_certificate_key $SSL_DIR/$domain/key.pem;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;

    root $root_dir;
    index index.html index.php;

    location / {
        try_files \$uri \$uri/ =404;
    }
$existing_config
}
EOF

    # ä½¿ç”¨ç»Ÿä¸€çš„å®‰å…¨é‡è½½æ¨¡æ¿
    if with_nginx_safe_reload "$conf_file" "ä¸º $domain æ·»åŠ  HTTPS"; then
        echo "${GREEN}âœ… HTTPS é…ç½®æˆåŠŸ: https://$domain ${RESET}"
    else
        echo "${RED}âŒ HTTPS é…ç½®å¤±è´¥ï¼Œå·²å›æ»š${RESET}"
        return 1
    fi
}

