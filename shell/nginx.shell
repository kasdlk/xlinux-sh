# ======================== æ ¸å¿ƒæ‰§è¡Œå±‚ ========================
# ç»Ÿä¸€ sudo æ‰§è¡Œå™¨ï¼ˆæƒé™å¯æ§ï¼‰
run_sudo() {
    # ä½¿ç”¨ set +e ä¸´æ—¶ç¦ç”¨ä¸¥æ ¼æ¨¡å¼ï¼Œå› ä¸ºæŸäº›å‘½ä»¤å¯èƒ½è¿”å›éé›¶ä½†å¯æ¥å—
    set +e
    sudo "$@" 2>/dev/null
    local result=$?
    set -e
    if [ $result -ne 0 ]; then
        log_error "å‘½ä»¤æ‰§è¡Œå¤±è´¥: $*"
        return 1
    fi
    return 0
}

# ç»Ÿä¸€å‘½ä»¤æ‰§è¡Œå™¨ï¼ˆå¸¦é”™è¯¯æ£€æŸ¥ï¼‰
run_cmd() {
    local desc="$1"
    shift
    if [ -n "$desc" ]; then
        echo "${BLUE}[+] ${desc}${RESET}"
    fi
    if ! "$@" 2>/dev/null; then
        log_error "å‘½ä»¤å¤±è´¥: $*"
        return 1
    fi
    return 0
}

# é”™è¯¯æ—¥å¿—
function log_error() {
    local msg="[ERROR] $1"
    echo "${RED}${msg}${RESET}" >&2
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] ${msg}" | run_sudo tee -a "$LOG_FILE" >/dev/null || true
}

# æ—¥å¿—è®°å½•
function log() {
    local msg="[INFO] $1"
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] ${msg}" | run_sudo tee -a "$LOG_FILE" >/dev/null || true
}

# æ£€æŸ¥ä¾èµ–
function check_deps() {
    local missing=()
    for cmd in curl sudo nginx; do
        if ! command -v $cmd &>/dev/null; then
            missing+=("$cmd")
        fi
    done

    if [ ${#missing[@]} -gt 0 ]; then
        echo "${RED}âŒ ç¼ºå°‘å¿…è¦ä¾èµ–: ${missing[*]}${RESET}"
        exit 1
    fi
    
    # ç»Ÿä¸€ sudo æƒé™æ¨¡å‹ - å¯åŠ¨æ—¶æ£€æŸ¥å¹¶åˆ·æ–°æƒé™ç¼“å­˜
    if ! sudo -v 2>/dev/null; then
        echo "${RED}âŒ éœ€è¦ sudo æƒé™ï¼Œè¯·ä½¿ç”¨ sudo è¿è¡Œæˆ–ç¡®ä¿å½“å‰ç”¨æˆ·åœ¨ sudoers ä¸­${RESET}"
        exit 1
    fi
    # åˆ·æ–° sudo æƒé™ç¼“å­˜ï¼Œé¿å…ä¸­é€”å¡æ­»
    sudo -v
}

# ======================== ç«™ç‚¹çŠ¶æ€æ¨¡å‹æŠ½è±¡ ========================
